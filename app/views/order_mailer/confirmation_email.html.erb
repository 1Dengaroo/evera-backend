<div style="font-family: Arial, sans-serif; margin: 20px; color: #333;">
  <h1 style="font-size: 24px; margin-bottom: 20px;">Order Confirmation</h1>

  <p style="font-size: 16px; margin-bottom: 20px;">
    Thank you for your order! Your order ID is <strong><%= @order.id %></strong>.
  </p>

  <h2 style="font-size: 20px; margin-bottom: 15px;">Order Details</h2>
  <ul style="list-style-type: none; padding: 0; margin-bottom: 20px;">
    <% @order_items.each do |item| %>
      <li style="margin-bottom: 10px;">
        <strong><%= item.product.name %></strong><br>
        Quantity: <%= item.quantity %><br>
        Price: $<%= item.product.price %>
      </li>
    <% end %>
  </ul>

  <p style="font-size: 16px; margin-bottom: 20px;">
    <strong>Total Price:</strong> $<%= @total_price %>
  </p>

  <h2 style="font-size: 20px; margin-bottom: 15px;">Delivery Address</h2>
  <p style="font-size: 16px; line-height: 1.5;">
    <strong>Name:</strong> <%= @delivery_address.name %><br>
    <strong>Address:</strong> <%= @delivery_address.line1 %><br>
    <% if @delivery_address.line2.present? %>
      <%= @delivery_address.line2 %><br>
    <% end %>
    <strong>City:</strong> <%= @delivery_address.city %>, <%= @delivery_address.state %> <%= @delivery_address.postal_code %><br>
    <strong>Country:</strong> <%= @delivery_address.country %>
  </p>
</div>
